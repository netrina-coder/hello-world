<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Controller">
   <center>
      <SplitPane dividerPositions="0.5" prefHeight="146.0" prefWidth="140.0">
         <items>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
               
                      <Label fx:id="text1" prefHeight="18.0" prefWidth="214.0" text="кількість кроків табуляції=" />
                  <Label prefHeight="18.0" prefWidth="40.0" text="макс=" />
               </children>
            </VBox>
            <VBox prefHeight="154.0" prefWidth="88.0">
               <children>
                   <Button onAction="#onCountButtonClick" text=" обчислити кількість">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="обчилити найбільше значення функції">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </center>
   <top>
      <HBox prefHeight="80.0" prefWidth="698.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="begin" promptText="enter a">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="end" promptText="enter b">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="step" promptText="enter h">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="bField" promptText="enter b1" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
